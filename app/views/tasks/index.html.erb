<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <li><input type="checkbox" <%= task.completed ? "checked" : "" %>>
  <%= link_to task.title, task_path(task)%> -
  <%= link_to task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Do you want ot delete thos task?"} do %>
   <i class="fa-solid fa-eraser danger"></i>
  <% end %></li>
<% end %>

<%= link_to "Create a new task", new_task_path %>
